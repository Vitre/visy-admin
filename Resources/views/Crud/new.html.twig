{% extends 'VisyVisyAdminBundle:Default:crud.html.twig' %}

{% trans_default_domain 'visy_admin_crud' %}

{% block body_class %}{{ parent() }} crud-new{% if has_sub_menu is not null and has_sub_menu %} crud-has-sub-menu{% endif %}{% if has_sup_menu is not null and has_sup_menu %} crud-has-sup-menu{% endif %}{% endblock %}

{% block header %}
    <h1>{{ 'new.header' | trans }}</h1>
{% endblock %}

{% block sup_menu %}
    {% if sup_menu %}
        <div class="menu sub_menu sup_menu crud-sup-menu">
            {{ knp_menu_render(sup_menu, { 'style': 'stacked-pills' }) }}
        </div>
    {% endif %}
{% endblock %}

{% block toolbar %}
    <div id="toolbar" class="btn-toolbar" role="toolbar">
        <a class="btn btn-default" href="{{ crud_index_path(controller) }}">
            <span class="glyphicon glyphicon-arrow-left"></span> {{ 'back' | trans }}
        </a>
    </div>
{% endblock %}

{% block content %}

    <div id="form">
        {{ form(form) }}
    </div>

{% endblock %}
